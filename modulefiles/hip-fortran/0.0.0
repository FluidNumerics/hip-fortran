#%Module 1.0
#
#  OpenMPI module for use with 'environment-modules' package:
#
conflict                singularity
prepend-path            LD_LIBRARY_PATH             /opt/hip-fortran/lib

setenv	HIPFORTRAN_VER "0.0.0"
setenv	HIPFORTRAN_INCLUDE "-I/opt/hip-fortran/include"
setenv	HIPFORTRAN_LIB "-L/opt/hip-fortran/lib/ -lhipfortran"
